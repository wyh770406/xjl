<% content_for :sidebar do %>
  <div class="well">
    <ul class="nav nav-list">
      <% unless current_user.is?('admin') || current_user.is?('accountant') || current_user.is?('manager') %>
        <li class="nav-header">
          <%= t("my_records") %>
        </li>
      <% end -%>
      <li class="nav-header">
        <%= t("my_info") %>
      </li>
      <li class="<%= 'active' if request.fullpath =~ /^#{profile_path}/ %>">
        <%= link_to t("profile"), edit_profile_path %>
      </li>
      <li class="<%= 'active' if request.fullpath =~ /^#{user_registration_path}/ %>">
        <%= link_to t("change_password"), edit_user_registration_path %>
      </li>
    </ul>
  </div>
<% end -%>
